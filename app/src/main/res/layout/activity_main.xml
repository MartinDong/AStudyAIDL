<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnSendMsgToAIDLServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnSendMsgToAIDLServer"
        android:text="向 AIDL Server 发送"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSyncCallAIDLServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnSyncCallAIDLServer"
        android:text="同步调用 AIDL Server 拉取数据"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAsyncCallAIDLServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnAsyncCallAIDLServer"
        android:text="异步调用 AIDL Server 拉取数据"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>